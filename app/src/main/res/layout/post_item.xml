<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:contentPaddingTop="16dp"
    cardview:contentPaddingRight="16dp"
    cardview:contentPaddingLeft="16dp"
    cardview:contentPaddingBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@color/secondary_text"/>
        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/avatar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            />
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/avatar"
            android:layout_below="@id/author_name"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:gravity="top"
            />
        <TextView
            android:id="@+id/content"
            android:maxHeight="250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/avatar"
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            />
        <include layout="@layout/rating_actions"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/content"
                 android:layout_alignParentLeft="true" />
        <TextView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/post_action_view_height"
            android:layout_below="@id/content"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/comment"
            android:drawablePadding="4dp"
            android:textSize="16sp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>