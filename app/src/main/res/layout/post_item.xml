<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:contentPaddingTop="16dp"
    cardview:contentPaddingRight="16dp"
    cardview:contentPaddingLeft="16dp"
    cardview:contentPaddingBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@color/secondary_text"/>
        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/avatar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            />
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/avatar"
            android:layout_below="@id/author_name"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:gravity="top"
            />
        <TextView
            android:id="@+id/content"
            android:maxHeight="250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/avatar"
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/rating_positive"
            android:text="+55"
            />
        <ImageView
            android:id="@+id/vote_up"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/content"
            android:layout_toRightOf="@id/rating"
            android:paddingTop="2dp"
            android:scaleType="center"
            android:src="@drawable/vote_up_checked"
            />
        <ImageView
            android:id="@+id/vote_down"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_below="@id/content"
            android:layout_toRightOf="@id/vote_up"
            android:paddingTop="2dp"
            android:scaleType="center"
            android:src="@drawable/vote_down_disabled"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>